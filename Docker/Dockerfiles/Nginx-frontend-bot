FROM node:alpine as vue-serve-bot

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

COPY ./frontend/memoire-app/package.json ./frontend/memoire-app/yarn.lock ./

RUN yarn

COPY ./frontend/memoire-app/ ./

RUN yarn build

FROM nginx:alpine

COPY --from=vue-serve-bot /usr/src/app/dist/ /usr/share/nginx/html

COPY ./Docker/config/bot.conf /etc/nginx/conf.d/default.conf